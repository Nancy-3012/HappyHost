<% layout("/layouts/boilerplate") %>
<%= success %>

<!-- ðŸ”§ STYLES -->
<style>
    /* Filter icons container */
    #filters {
        display: flex;
        overflow-x: auto;
        white-space: nowrap;
        padding: 1rem 0;
        scrollbar-width: none;
        align-items: center;
    }

    #filters::-webkit-scrollbar {
        display: none;
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        flex: 0 0 auto;
        opacity: 0.7;
        transition: opacity 0.3s;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter i {
        font-size: 16px;
        margin-bottom: 0.3rem;
        display: block;
    }

    .filter p {
        font-size: 0.8rem;
        margin: 0;
        color: #000; /* âœ… Black text for icons */
    }

    .tax-info {
        display: none;
        color: #888; /* Gray for +GST */
        font-size: 0.85rem;
    }

    /* âœ… Removed borders/button-like appearance */
    .tax-toggle {
        padding: 0.5rem 1rem;
        margin-left: 3rem;
    }

    .form-check-label {
        color: #000; /* Black label text */
        font-weight: 500;
    }

    .card-text b {
        color: #222; /* Listing title */
    }

    /* Clean image display */
    .card-img-top {
        object-fit: cover;
        height: 20rem;
        border-radius: 0.5rem 0.5rem 0 0;
    }
</style>

<!-- âœ… FILTER BAR -->
<div id="filters">
    <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic Cities</p>
    </div>
    <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
    </div>
</div>

<!-- âœ… DISPLAY TAX TOGGLE -->
<div class="tax-toggle">
  <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
  </div>
</div>

<!-- âœ… LISTINGS SECTION -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
            <div class="card col listing-card mb-4">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br />
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST </i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<!-- âœ… GST Toggle Script -->
<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = (info.style.display !== "inline") ? "inline" : "none";
        }
    });
</script>






